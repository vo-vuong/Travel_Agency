                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* wrap content*@
    <div class="col-xs-12 col-sm-12">
        @* Title content *@
        <div class="row">
            <div class="col-xs-12">
                <h2 align="center" style="margin: 10px 0px 0px 0px;">Điểm đến <span style="color: #0071BC;font-weight: bold;">du lịch</span></h2>
                <hr style="width: 100%;">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h4 align="center" style="margin: 0px 0px 18px 0px;">Các điểm đến du lịch hàng đầu trong nước hãy đến đây và trải nghiệm cùng chúng tôi</h4>
            </div>
        </div>
        @* List content *@
        <div class="row">
            @foreach (var item in listContentNew.Take(6))
            {
                <div class="col-sm-6 col-md-4" style="padding: 0;">
                    <div class="thumbnail">
                        <a href="/tin-tuc/chi-tiet/@item.IDContent">
                            <img src="@item.Image" alt="@item.ContentName" id="image" style="transition-duration: .4s">
                        </a>
                        <a href="/tin-tuc/chi-tiet/@item.IDContent" class="btn btn-default col-xs-12" role="button" style="font-weight: bold;">@item.ContentName</a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }
        </div>
    </div>


