
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/Layout.cshtml";
    var listTourAbroad = (List<Model.EF.TOUR>)ViewBag.ListTourAbroad;
    var listTourDomestic = (List<Model.EF.TOUR>)ViewBag.ListTourDomestic;
    //var listTourHot = (List<Model.EF.TOUR>)ViewBag.ListTourHot;
    //var listTourSale = (List<Model.EF.TOURSALE>)ViewBag.ListTourSale;
    var listContentNew = (List<Model.EF.CONTENT>)ViewBag.ListContentNew;
}


<div class="row">
    <div style="height:">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="height: auto;">
                <div class="item active">
                    <img src="~/Assets/Client/images/a.jpg" alt="Los Angeles" style="height: 500px;width: 100%;">
                </div>
                <div class="item">
                    <img src="~/Assets/Client/images/c.jpg" alt="New York" style="height: 500px;width: 100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="height: 100%;">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="container">
    @* Title tour Domestic*@
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <h2 align="center" style="margin: 25px 0px 0px 0px;">Tour <span style="color: #0071BC;font-weight: bold;">trong nước</span></h2>
            <hr style="width: 60%;">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <h4 align="center" style="margin: 0px 0px 18px 0px;">Các điểm đến du lịch hàng đầu trong nước hãy đến đây và trải nghiệm cùng chúng tôi</h4>
        </div>
    </div>
    @* List tour Domestic *@
    <div class="row">
        <div style="margin-bottom: 15px;">
            @foreach (var item in listTourDomestic.Take(4))
            {
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" style="margin-bottom: 5%;">
                    <div style="margin: 0px;transition-duration: .4s;" id="image">
                        <a href="/chi-tiet-tour/@item.IDTour"><img src="@item.Image" class="img-thumbnail"></a>
                        <div class="caption" style="padding: 5px 0px 10px 0px;border-bottom: 2px solid #0071BC;">
                            <a href="/chi-tiet-tour/@item.IDTour" style="text-decoration: none;margin: 0px;">
                                <h4 style="margin: 0px 0px 5px 0px;color: #0071BC;font-weight: bold;">@item.TourName</h4>
                                <p style="margin-bottom: -15px;color: #666666;font-weight: bold;">@item.Shortbody</p>
                            </a>
                            <hr style="margin-bottom: 0px;border-bottom: 2px solid #0071BC">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h4 style="color: #0071BC;font-weight: bold;">@(item.Price.HasValue ? item.Price.Value.ToString("N0") + "VND" : "Liên hệ")<a href="#" class="btn btn-default col-xs-5 col-sm-5 col-md-12 col-lg-5" style="padding: 5px 16px;float: right;"><span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;&nbsp;&nbsp;Đặt tour</a></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        @foreach (var item in listTourDomestic.Skip(4).Take(4))
        {
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" style="margin-bottom: 5%;">
