@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<Model.EF.TOUR>

@{
    ViewBag.Title = "Tour ngoài nước";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top: 20px;">
        @*<div class="col-md-2">
                <div class="sidebar" style="margin-top: 60px;">
                    <h4>KHOẢNG GIÁ</h4>
                    <div class="checkbox">
                        <label style="font-weight: bold;padding-bottom: 5px;"><input type="checkbox" name="">Dưới 3.000.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label style="font-weight: bold;padding-bottom: 5px;"><input type="checkbox" name="">3.000.000 VNĐ - 7.000.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label style="font-weight: bold;padding-bottom: 5px;"><input type="checkbox" name="">7.000.000 VNĐ - 10.000.000 VNĐ</label>
                    </div>
                    <div class="checkbox">
                        <label style="font-weight: bold;padding-bottom: 5px;"><input type="checkbox" name="">Trên 10.000.000 VNĐ</label>
                    </div>
                </div>
            </div>*@
        <div class="col-xs-12 col-md-10">
            <div class="header-content" style="display: flex;justify-content: space-between;">
                <div class="row">
                    <div class="col-xs-12">
                        <label style="font-size: 1.4em;" class="col-xs-12">Tất cả tour</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        @using (Html.BeginForm("Abroad", "Tour", FormMethod.Get))
                        {
                            <label class="radio-inline">
                                @Html.RadioButton("sort", "", new { @checked = true })<span style="font-size: 1.2em;">Ngày khởi hành</span>
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButton("sort", "tang-dan")<span style="font-size: 1.2em;">Giá tăng dần</span>
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButton("sort", "giam-dan")<span style="font-size: 1.2em;">Giá giảm dần</span>
                            </label>
                        }
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="" style="margin-bottom: 15px;">
                    @foreach (var item in Model.Take(3))
                    {
                        <div class="col-xs-12 col-sm-4 col-md-4" style="margin-bottom: 5%;">
                            <div style="margin: 0px;transition-duration: .4s;border: 1px solid #777777;border-radius: 6px;" id="image">
                                <a href="/chi-tiet-tour/@item.IDTour"><img src="@item.Image" class="img-thumbnail col-xs-12" style="border-top-right-radius: 6px;border-top-left-radius: 6px;margin-bottom: 10px;"></a>
                                <div class="caption" style="padding: 5px 0px 10px 0px;">
                                    <a href="/chi-tiet-tour/@item.IDTour" style="text-decoration: none;margin: 0px;">
                                        <h4 style="margin: 0px;color: #000000;font-size: 1.2em;margin-left: 10px;line-height: 22px;font-weight: bold;">@item.TourName</h4>
                                    </a>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <h4 style="color: #0071BC;font-weight: bold;font-size: 1.2em;margin-left: 5px;">@(item.Price.HasValue ? item.Price.Value.ToString("N0") + "VND" : "Liên hệ")</h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="glyphicon glyphicon-calendar" style="margin-left: 10px;margin-bottom: 10px;"></div>&nbsp;<span style="font-weight: bold;">@item.DateStart</span>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="glyphicon glyphicon-flag" style="margin-left: 10px;"></div>&nbsp;<span style="font-weight: bold;">@item.Time</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="" style="margin-bottom: 15px;">
                    <div class="" style="margin-bottom: 15px;">
                        @foreach (var item in Model.Skip(3).Take(3))
                        {
                            <div class="col-xs-12 col-sm-4 col-md-4" style="margin-bottom: 5%;">
                                <div style="margin: 0px;transition-duration: .4s;border: 1px solid #777777;border-radius: 6px;" id="image">
                                    <a href="/chi-tiet-tour/@item.IDTour"><img src="@item.Image" class="img-thumbnail col-xs-12" style="border-top-right-radius: 6px;border-top-left-radius: 6px;margin-bottom: 10px;"></a>
                                    <div class="caption" style="padding: 5px 0px 10px 0px;">
                                        <a href="/chi-tiet-tour/@item.IDTour" style="text-decoration: none;margin: 0px;">
                                            <h4 style="margin: 0px;color: #000000;font-size: 1.2em;margin-left: 10px;line-height: 22px;font-weight: bold;">@item.TourName</h4>
                                        </a>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <h4 style="color: #0071BC;font-weight: bold;font-size: 1.2em;margin-left: 5px;">@(item.Price.HasValue ? item.Price.Value.ToString("N0") + "VND" : "Liên hệ")</h4>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="glyphicon glyphicon-calendar" style="margin-left: 10px;margin-bottom: 10px;"></div>&nbsp;<span style="font-weight: bold;">@item.DateStart</span>
                                            </div>
                                            <div class="col-xs-12">
                                                <div class="glyphicon glyphicon-flag" style="margin-left: 10px;"></div>&nbsp;<span style="font-weight: bold;">@item.Time</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12" style="display: flex;justify-content: center;">
                    <ul class="pagination" class="col-xs-12">
                        @Html.PagedListPager(Model, pageNumber => Url.Action("Abroad", new { pageNumber, @sort = ViewBag.sort }))
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section jsFooter{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script>

        $(document).ready(function () {
            $('input[name=sort]').change(function () {
                $('form').submit();
            });
        });
    </script>
}